<h1><%= @user.username %></h1>
<h3>Email: <%= @user.email %></h3>

<% if @user.id == session[:user_id]%>
  <form action= "/users/<%= @user.id %>/edit" method="patch">
    <input type="submit" value="Edit User">
  </form><br>

  <form action= "/users/<%= @user.id %>/delete" method="post">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete User">
  </form><br>
<% end %>

<h3><a href = "/users">User Index</a></h3>

<br></br>

<h2> <%= @user.username %>'s Recipes </h2>

<% @user.recipes.each do |recipe| %>

  <h3>name: <a href = "/recipes/<%=recipe.id%>"><%= recipe.name %></a></h3>

  <h3>description: <%= recipe.description %></h3>

  <% if @user.id == session[:user_id]%>
    <h3>
      <form action= "/recipes/<%=recipe.id%>/edit" method="patch">
        <input type="submit" value="Edit Recipe">
      </form>
    </h3>

    <h3>
      <form action= "/recipes/<%=recipe.id%>/delete" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Recipe">
      </form>
    </h3>

  <% end %>

  <br></br>

<% end %>

<% if @user.id == session[:user_id]%>
  <h3><a href = "/recipes/new">Add new recipe</a></h3>
<% end %>

<h3><a href = "/recipes">Recipe Index</a></h3>
